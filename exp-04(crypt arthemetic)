from itertools import permutations
def solve_cryptarithm():
    letters = 'SENDMORY'
    for perm in permutations('0123456789', len(letters)):
        s, e, n, d, m, o, r, y = perm
        if s == '0' or m == '0':
            continue
        send = int(s + e + n + d)
        more = int(m + o + r + e)
        money = int(m + o + n + e + y)
        if send + more == money:
            print(f'{send} + {more} = {money}')
            return
solve_cryptarithm()

